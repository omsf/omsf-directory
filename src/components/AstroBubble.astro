---
interface Props {
	select?: boolean
	tag: string
}

const { select, tag, ...props } = Astro.props
---

<a
  {...props}
  class={`font-omsf-subheading rounded-full px-3 py-1 text-sm disabled:bg-omsf-gray transition-colors ${
    select
      ? "bg-omsf-base text-gray-800"
      : "bg-omsf-gray hover:bg-omsf-base text-gray-800"
  }`}>{tag}</a
>
